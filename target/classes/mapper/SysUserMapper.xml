<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.cqrk.energytrack.mapper.SysUserMapper">

    <resultMap id="SysUserResultMap" type="cn.edu.cqrk.energytrack.entity.pojo.SysUser">
        <id column="user_id" property="id"/>
        <result column="user_name" property="username"/>
        <result column="user_password" property="password"/>
        <result column="user_role" property="role"/>
        <result column="user_email" property="email"/>
        <result column="user_phone" property="phone"/>
        <result column="user_status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectByUsername" parameterType="java.lang.String" resultMap="SysUserResultMap">
        SELECT user_id, user_name, user_password, user_role, user_email, user_phone, user_status, create_time, update_time
        FROM user
        WHERE user_name = #{username}
    </select>

</mapper>